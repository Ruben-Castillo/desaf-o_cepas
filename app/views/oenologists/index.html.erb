<p id="notice"><%= notice %></p>

<h1>Enólogos</h1>
<%= link_to 'Agregar Enólogo', new_oenologist_path %>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Nacionalidad</th>
      <th>Trabajo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= link_to oenologist.name, edit_oenologist_path(oenologist) %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <% magazines=oenologist.magazines.uniq %>
        <td><% magazines.each do |m| %>
          <% jobtitles=m.findOenologistJobTitles(oenologist.id) %>
          <%= "#{m.name}  (#{jobtitles})" %>
          <br>
        <% end %>
        </td>
        <td><%= link_to 'Eliminar', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


