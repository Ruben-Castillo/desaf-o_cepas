<p id="notice"><%= notice %></p>

<h1>Revistas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @magazines.each do |magazine| %>
      <tr>
        <td><%= link_to magazine.name, edit_magazine_path(magazine) %></td>
        <td><%= link_to 'Eliminar', magazine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Revista', new_magazine_path %>
